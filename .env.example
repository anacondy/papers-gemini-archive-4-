# Flask Configuration
# Copy this file to .env and set your own values

# Secret key for session management
# IMPORTANT: Generate a strong random key for production
# You can use: python -c "import os; print(os.urandom(24).hex())"
SECRET_KEY=change-this-to-a-random-secret-key

# Flask debug mode (NEVER set to True in production)
FLASK_DEBUG=False

# Application host and port
FLASK_HOST=127.0.0.1
FLASK_PORT=5000
